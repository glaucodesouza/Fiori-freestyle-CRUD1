<mvc:View
    controllerName="fiorifreestylecrud1.controller.Worklist"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.f.semantic"

    >
    <!-- core:require="{Decimal: 'sap/ui/model/type/Decimal'}" -->
    <semantic:SemanticPage
        id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false">

        <semantic:titleHeading> 
            <Title
                text="{i18n>worklistTitle}"
                level="H2"/>
        </semantic:titleHeading>

        <semantic:content> 
            <Table
                id="table"
                width="auto"
                mode="MultiSelect"
                delete="onDeletar"
                items="{
                    path: '/Z270FREECRUD1Set',
                    sorter: {
                        path: 'Codigo',
                        descending: false
                    }
                }"
                noDataText="{worklistView>/tableNoDataText}"
                busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                growing="true"
                growingThreshold="10"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished">

                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            id="tableHeader"
                            text="{worklistView>/worklistTableTitle}"
                            level="H3"/>
                        <ToolbarSpacer />
                        <Button id="btnCriar"           text="Criar"            press="onCriar"         type="Emphasized"/>
                        <Button id="btnDeletarMuitos"   text="Eliminar Vários"  press="onDeletarMuitos" type="Emphasized"/>
                        <SearchField
                            id="searchField"
                            tooltip="{i18n>worklistSearchTooltip}"
                            search=".onSearch">
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    maxWidth="200px"
                                    priority="NeverOverflow"/>
                            </layoutData>
                        </SearchField>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column id="codigoColumn">
                      <Text text="Código" id="codigoColumnLabel" />
                    </Column>
                    <Column id="descricaoColumn" hAlign="Left">
                      <Text text="Produto" id="descricaoColumnLabel"/>
                    </Column>
                    <Column id="kwmengColumn" hAlign="End">
                      <Text text="Quantidade" id="kwmengColumnLabel"/>
                    </Column>
                    <Column id="netprColumn" hAlign="End">
                        <Text text="Preço Líquido" id="netprColumnLabel"/>
                    </Column>

                    <Column id="dataCadastroColumn" hAlign="End">
                        <Text text="Data Cadastro" id="dataCadastroLabel"/>
                    </Column>
                    <Column id="horaCadastroColumn" hAlign="End">
                        <Text text="Hora Cadastro" id="horaCadastroLabel"/>
                    </Column>

                    <Column id="AprovaCadastroColumn" hAlign="End">
                      <Text text-="Aprovado" id="idAprovaCadastroColumn" />
                    </Column>
                    <Column id="DeletarCadastroColumn" hAlign="End">
                      <Text text="Deletar" id="idDeletarCadastroColumn"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem
                        type="Navigation" 
                        press=".onPress">
                        <cells>
                            <ObjectIdentifier title="{Codigo}"/>
                            <Text text="{Descricao}"
                            />
                            <ObjectNumber 
                              number="{Kwmeng}"
                              unit="{Meins}"
                              state="{
                                parts: [
                                  {path: 'Kwmeng'}
                                ],
                                formatter: '.formatter.formatarQtde'
                              }"
                              />
                            <ObjectNumber 
                              number="{
                                path: 'Netpr',
                                formatter: '.formatter.formatarFloat'
                              }" 
                                unit="{Waerk}"
                            />
                            <ObjectIdentifier title="{
                              path: 'DataCadastro',
                              type: 'sap.ui.model.type.Date',
                              formatOptions: {
                                style: 'short',
                                UTC: true
                              }
                            }" />
                            <ObjectIdentifier title="{
                              path: 'HoraCadastro',
                              type: 'sap.ui.model.odata.type.Time',
                              formatOptions: {
                                style: 'short',
                                pattern: 'HH:MM'
                              }
                            }" />
                            <Button icon="{= ${Aprovado} === true ? 'sap-icon://accept' : 'sap-icon://approve'}" press="onAprovarProduto" />
                            <Button icon="sap-icon://delete" press="onDeletar" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </semantic:content>

		<semantic:footerCustomActions>
			<Button 
			icon="sap-icon://alert"
			text="{= ${messagez>/}.length }"
			visible="{= ${messagez>/}.length > 0 }"
			type="Emphasized"
			press="onMessagePopoverPress"
			></Button>
		</semantic:footerCustomActions>

    </semantic:SemanticPage>

</mvc:View>